extends layout

block header
  div.navbar-fixed
    nav.blue-grey.darken-4
      div.nav-wrapper
        a.brand-logo.center(href="/") THUMP
        ul.right
          - if (session && session.username){
          li
            a.btn.modal-trigger(data-target="create-modal") Create a new playlist
          -}
          - else{
          li
            a.btn.modal-trigger(data-target="create-modal") Create Account
            a.btn.modal-trigger(data-target="create-modal") Login
          -}
            
  div.modal#create-modal
    div.modal-content
      form(name="create", action="/playlist/create", method="post")
        div.container
          div.row.valign-wrapper
            div.input-field.col.s10
              input(placeholder="CREATE A PLAYLIST" id="name" name="playlist_name" class="validate")
            div.col.s2
              button.btn(type="submit") Create
